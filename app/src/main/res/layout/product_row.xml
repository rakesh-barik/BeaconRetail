<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:clickable="true"
    card_view:cardCornerRadius="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
        />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/product_title"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/productImage"
            tools:text="Apex Bionic Jacket"
            />
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/product_description"
            android:textColor="@color/material_grey_600"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_toRightOf="@id/productImage"
            android:layout_below="@id/productName"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut"
            />
        <TextView
            android:id="@+id/productSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/product_size"
            android:textColor="@color/material_red_700"
            android:layout_toRightOf="@id/productImage"
            android:layout_below="@id/productDescription"
            tools:text="Size S - XL"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/material_blue_700"
            android:textSize="@dimen/product_price"
            android:layout_below="@id/productSize"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:text="2500"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>